{
  "name": "viflo",
  "version": "1.1.0",
  "private": true,
  "description": "Universal Agentic Development Environment — methodology, skills, and workflows for hybrid AI-human software development",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.6.5",
  "bin": {
    "viflo": "bin/viflo.cjs"
  },
  "scripts": {
    "prepare": "husky",
    "quality-gate": "bash scripts/quality-gate.sh",
    "gate:lint": "bash scripts/quality-gate.sh --gate lint",
    "gate:typecheck": "bash scripts/quality-gate.sh --gate typecheck",
    "gate:test": "bash scripts/quality-gate.sh --gate test",
    "gate:build": "bash scripts/quality-gate.sh --gate build",
    "lint": "prettier --check \"**/*.{md,yaml,yml,json}\" --ignore-path .gitignore",
    "lint:fix": "prettier --write \"**/*.{md,yaml,yml,json}\" --ignore-path .gitignore",
    "type-check": "echo 'type-check: no TS sources at root (documentation repo)' && exit 0",
    "test": "pnpm --filter @viflo/web test",
    "test:web:ci": "pnpm --filter @viflo/web run test && pnpm --filter @viflo/web run test:coverage:ratchet",
    "test:llm": "bash scripts/run-llm-tests.sh",
    "test:cli": "pnpm exec vitest run --config bin/vitest.config.cjs",
    "precommit:secrets": "./scripts/precommit-secrets.sh",
    "validate:sc-prompts": "./scripts/validate-sc-prompts.sh",
    "bench:sc-reflect": "./scripts/benchmark-sc-reflect.sh",
    "db:up": "docker-compose -f packages/db/docker-compose.yml up -d",
    "db:down": "docker-compose -f packages/db/docker-compose.yml down",
    "db:migrate": "cd packages/db && alembic upgrade head",
    "db:reset": "pnpm run db:down && pnpm run db:up && sleep 3 && pnpm run db:migrate",
    "db:test": "cd packages/db && pnpm run test:integration",
    "build": "echo 'build: documentation repo — no build step' && exit 0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.0",
    "vitest": "^1.0.0"
  }
}
